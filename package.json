{
  "name": "scrummy-bot",
  "version": "1.0.0",
  "description": "Discord bot to assist with time and task tracking for a scrum managed Agile project.",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --exec npm run devbuild",
    "build": "run-s clean build-bot",
    "clean": "rimraf dist",
    "devbuild": "run-s clean devbuild-bot devstart",
    "devbuild-bot": "esbuild --define:_DEV_=true --platform=node --external:saslprep --external:erlpak --external:zlib-sync --external:bufferutil --external:utf-8-validate --bundle --outfile=dist/scrummybot.js index.js",
    "build-bot": "esbuild --define:_DEV_=false --platform=node --external:saslprep --external:erlpak --external:zlib-sync --external:bufferutil --external:utf-8-validate --bundle --outfile=dist/scrummybot.js index.js",
    "devstart": "bash -c 'DEBUG=bot,bot:* DEBUG_HIDE_DATE=true DEBUG_COLORS=true node dist/scrummybot.js'",
    "start": "bash -c 'DEBUG=bot,bot:* DEBUG_HIDE_DATE=true DEBUG_COLORS=true node dist/scrummybot.js"
  },
  "engines": {
    "node": "14.x"
  },
  "nodemonConfig": {
    "ignore": [
      "dist/",
      "Procfile",
      "node_modules",
      ".eslintrc.json",
      "package-lock.json",
      "package.json"
    ],
    "ext": "json js",
    "verbose": false
  },
  "author": "Seth Berrier",
  "license": "MIT",
  "devDependencies": {
    "d3-time": "^2.0.0",
    "debug": "^4.3.1",
    "discord.js": "^11.5.1",
    "dotenv": "^8.2.0",
    "esbuild": "^0.8.36",
    "eslint": "^7.18.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "luxon": "^1.25.0",
    "mongodb": "^3.6.3",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "bufferutil": "^4.0.3",
    "erlpack": "github:discord/erlpack",
    "saslprep": "^1.0.3",
    "utf-8-validate": "^5.0.4",
    "zlib-sync": "^0.1.7"
  }
}
